<div class="page-header">
  <%= link_to stations_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>

  <h1><%= @station.name.titleize %></h1>
</div>
<% if @station.favorite?(current_user) %>
  <span class="glyphicon glyphicon-heart"></span>
<% end %>

<dl class="dl-horizontal">
  <dt style="text-align: left;">Stream Conditions:</dt>
  <dd>One Thousand cfs</dd>
  <br/>

  <dt>Latitude:</dt>
  <dd><%= fmt_coord @station.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= fmt_coord @station.longitude %></dd>

    <% @dates.each do |date| %>
      <% forecast = @station.forecast_at(date) %>
      <dd><strong><%= forecast.date.strftime("%A, %B %e") %></strong></dd>
      <dd><%= forecast.summary %></dd>
      <dd>High: <%= number_with_precision(forecast.maxtemp, precision: 2) %>&deg; F</dd>
      <dd>Low: <%= number_with_precision(forecast.mintemp, precision: 2) %>&deg; F</dd>
    <% end %>
</dl>


<div style="clear:both"></div>
<br/>
<br/>

<!-- Google Maps -->
<div align="center" style='width: 100%; margin-bottom: 100px;'>
  <div id="map" style='width: 65em; height: 30em;'></div>
</div>

<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({provider: {}, internal: {id: 'map'}}, function() {
    markers = handler.addMarkers(<%=raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.getMap().setZoom(10)
  });
</script>
<!-- End Google Maps -->
<br/>
<br/>
</dl>

<div>

  <h3>Flow Reading</h3>

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
      <tr>
        <th>Date</th>
        <th>Flow Rate</th>


      </tr>
      </thead>
      <tbody>
      <% @station.flow_readings.last(10).each do |reading| %>
        <tr>
          <td><%= reading.date_time.in_time_zone.strftime("%A %e %B %Y,%I:%M:%S %Z") %></td>
          <td><%= format_flow_rate reading.flow_rate %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

