<div class="page-header">
  <%= link_to stations_path, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_station_path(@station), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show station</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @station.name %></dd>

  <dt>Latitude:</dt>
  <dd><%= @station.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @station.longitude %></dd>

  <dt>Forecast</dt>
  <dd id="w_temperature"><%= @station.weather[:temperature] %></dd>
  <dd id="w_summary"><%= @station.weather[:summary] %></dd>

</dl>
